<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:id="@+id/modeSelectLayout"
    android:layout_width="@dimen/gridModeElementSize"
    android:layout_height="@dimen/gridModeElementSize"
    xmlns:android="http://schemas.android.com/apk/res/android"    
    android:padding="0dp"    
    android:background="@android:color/transparent">
     
    <ImageView
        android:id="@+id/modeImage"
        android:layout_height="@dimen/gridModeImageSize"
        android:layout_width="@dimen/gridModeImageSize"
        android:layout_marginTop="0dp"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"        
        android:background="@drawable/thumbnail_background_inner">
    </ImageView>
     
    <RelativeLayout android:id="@+id/textLayout"
        			android:layout_height="@dimen/gridModeTextLayoutSize"
        			android:layout_width="fill_parent"
        			android:layout_below="@+id/modeImage"
        			android:layout_alignParentBottom="true">
    <TextView
        android:id="@+id/modeText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"        
        android:textSize="@dimen/gridModeTextSize">
    </TextView>
    
    </RelativeLayout>
     
</RelativeLayout>